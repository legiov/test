{% extends "CoreBundle::layout.html.twig" %}

{% block title %}{{ 'blog.core.post.plural' | trans }}{% endblock %}

{% block sidebar %}
    <aside>
        <h3>{{ 'blog.core.post.latests' | trans }}</h3>
        {% for post in latest_posts %}
            <p><a href="{{ path('blog_core_post_show', {'slug' : post.slug})}}">{{ post.title }}</a></p>
        {% endfor %}
    </aside>
{% endblock %}

{% block section %}
    {% for post in posts %}
        {{ include('CoreBundle:Post:_post.html.twig', {post: post} ) }}
    {% endfor %}

{% endblock %}
