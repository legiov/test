<article>
    <header>
        <h2><a href="{{ path('blog_core_post_show', {'slug' : post.slug})}}">{{ post.title }}</a></h2>
        <p>
            {{ 'blog.core.post.on' | trans }}
            <time datetime="{{ post.createdAt | date('c') }}">{{ post.createdAt | date }}</time>
            {{ 'blog.core.post.by' | trans }} <a href="{{ path('author_show', {slug:post.author.slug}) }}">{{ post.author.name }}</a>
            {% if bundle_resolver.bundleIsset('comment') %}
                <a href="{{ path('blog_core_post_show', {slug: post.slug}) }}#coments">
                    {{ comments_count( post ) }}
                </a>
            {% endif %}
        </p>
    </header>
    <p>
        {{ post.body | truncate(400) }} &#8212; <a href="{{ path('blog_core_post_show', {'slug' : post.slug})}}">{{ 'blog.core.post.read.more' | trans }} &raquo;</a>
    </p>

</article>
